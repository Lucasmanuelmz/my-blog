<%-include('../../partials/Head'); -%>
<%-include('../../partials/header'); -%>
<div class="container mt-10 mx-auto max-w-2xl border-x-2 border-y-2 border-radius rounded-xl px-4 py-4">
    <h1 class="font-bold mx-auto max-w-80 text-lg mb-6">Crie um novo artigo</h1>
    <form class="flex flex-col" action="/dashboard/add-articles" method="post">
        <label class="text-base text-slate-500" for="title" >Título do artigo</label>
        <input class="border-x-2 mb-4 border-y-2 mt-2 max-w-2xl py-2 px-2 rounded-xl" type="text" name="title" id="title" placeholder="Título do novo artigo">
        <label class="text-lg text-base text-slate-500" for="body">Corpo do artigo</label>
        <textarea class="mt-1 mb-4 block w-full px-3 py-2 bg-white border border-slate-300 rounded-md text-sm shadow-sm placeholder-slate-400
        focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500
        disabled:bg-slate-50 disabled:text-slate-500 disabled:border-slate-200 disabled:shadow-none" name="body" id="body" placeholder="Escreva o corpo do artigo neste espaço"></textarea>
        
        <label class="text-lg mb-3 text-base text-slate-500" for="categoryId">Categoria do artigo</label>
        <select name="categoryId" id="categoryId">
            <%categories.forEach(category => {%>
                 <option value="<%= category.id %>"><%= category.title %></option>
           <% })%>
           
        </select>
        <button type="submit" class="bg-violet-500 hover:bg-violet-600 active:bg-violet-700 focus:outline-none focus:ring
         focus:ring-violet-300 py-2 px-5 rounded-2xl mt-4 max-w-fit">
            Salvar artigo
          </button>
    </form>
</div>
<script src="../../../tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_PT',
        selector: '#body',
        plugins: ['autolink autosave autorisize code codesample image link lists preview table searchreplace save print fullscreen advlist']
    })
</script>
<%-include('../../partials/Footer'); -%>